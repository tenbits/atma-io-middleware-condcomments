{
    "name": "atma-io-middleware-condcomments",
    "version": "1.2.8",
    "description": "Conditional comments middleware for Atma.IO and Atma.Toolkit",
    "author": {
        "name": "Alex Kit",
        "url": "alex.kit@atmajs.com"
    },
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build": "app-bundler",
        "watch": "app-bundler --watch",
        "test": "atma test"
    },
    "dependencies": {
        "atma": "^0.15.24",
        "atma-io-middleware-base": "^1.0.51"
    },
    "devDependencies": {
        "@types/node": "^8.0.34",
        "app-bundler": "^0.2.17",
        "atma-io": "^1.3.7",
        "atma-loader-ts": "^1.2.7"
    },
    "app-bundler": {
        "file": "src/index.ts",
        "outputMain": "index.js",
        "package": {
            "module": "commonjs",
            "commonjs": {
                "output": "simplified"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        },
        "dynamicDependencies": [
            "atma-io-middleware-base"
        ]
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extensionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "target": "es6",
                        "module": "AMD",
                        "sourceMap": false
                    }
                }
            }
        }
    }
}
